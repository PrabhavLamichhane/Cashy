<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@color/colorPrimary"
    tools:context=".PaytmActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/paypal"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="32dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/paytm"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/paypal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@drawable/flat_corner"
            android:backgroundTint="@color/colorWhite"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:hint="Amount you want to redeem"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="30dp"
            android:textColor="#000"
            tools:ignore="Autofill"/>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/flat_corner"
            android:backgroundTint="@color/colorWhite"
            android:paddingLeft="15dp"
            android:hint="Paytm Name"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="30dp"
            android:textColor="#000"
            tools:ignore="Autofill"/>

        <EditText
            android:id="@+id/textno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/flat_corner"
            android:backgroundTint="@color/colorWhite"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:hint="Paytm number"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="30dp"
            android:textColor="#000"
            tools:ignore="Autofill"/>

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#d11d53"
            android:text="Redeem"
            android:layout_gravity="center"
            android:stateListAnimator="@null"
            android:textColor="@color/colorWhite"
            android:padding="16dp"
            android:textSize="22sp"
            android:textStyle="bold"/>


    </LinearLayout>


</RelativeLayout>
