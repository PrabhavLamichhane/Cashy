<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".SpinWheelResultActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:padding="4dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/transparent"
                android:tint="@color/colorTints"/>
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTints"
                android:textSize="28sp"
                android:textAlignment="center"
                android:text="SPIN WHEEL"
                android:layout_marginRight="26sp"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/congrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="CONGRATULATIONS"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_below="@id/toolbar"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:gravity="center_horizontal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/congrats"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/win"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="35sp"
            android:textAlignment="center"
            android:text="You win coins"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_below="@id/toolbar"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="35sp"
            android:textAlignment="center"
            android:text="BIG WIN"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_below="@id/toolbar"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You win coins"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/coinValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    android:textColor="#000"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/money_stack"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Spin Again"
        android:stateListAnimator="@null"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_background"
       />
</RelativeLayout>